    ##### ARRAY MEMORY MANIPULATION #####

    # Swaps the values of the two given indices
    # Change return type to void
    bool swap(int i1, int i2, int[] arr) is
        int temp = arr[i1] ;
        arr[i1] = arr[i2] ;
        arr[i2] = temp ;
        return true
    end

    # Copies the elements of given integer array 'arr' into the given buffer array 'buff'
    # If the 'rev' flag is set, then the order is reversed
    # Change return type to void ?
    bool copy_int_array(int[] arr, int[] buff, bool rev) is
        int i = 0 ;
        int j = 0 ;
        int arr_len = len arr ;
        while (i < arr_len) do
            if (!rev) then
                j = i 
            else
                j = arr_len - i - 1
            fi ;
            buff[j] = arr[i] ;
            i = i + 1
        done ;
        return true
    end

    # Copies the elements of given boolean array 'arr' into the given buffer array 'buff'
